{
    "name": "berrylink-b2b",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "start:dev": "npm run start:dev -w server",
        "build:server": "npm run build -w server",
        "start:prod": "npm run start:prod -w server",
        "dev:client": "npm run dev -w client",
        "build:client": "npm run build -w client",
        "dev": "concurrently \"npm run start:dev\" \"npm run dev:client\"",
        "prisma:generate": "npm run prisma:generate -w server",
        "prisma:push": "npm run prisma:push -w server"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}