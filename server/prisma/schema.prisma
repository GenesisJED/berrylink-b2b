generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  stock       Int      @default(0)
  moq         Int      @default(1)      // MÃ­nimo de compra para empresas
  image       String?                   // URL de la fresa
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}